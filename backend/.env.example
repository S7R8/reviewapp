# =====================================================
# ReviewApp - Environment Variables
# =====================================================
# このファイルを .env にコピーして使用してください
# cp .env.example .env

# =====================================================
# Application Settings
# =====================================================
ENV=development
PORT=8080
LOG_LEVEL=debug

# =====================================================
# Database (PostgreSQL)
# =====================================================
DATABASE_URL=

# または個別に設定
DB_HOST=
DB_PORT=
DB_USER=
DB_PASSWORD=
DB_NAME=
DB_SSLMODE=

# Connection Pool
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# =====================================================
# Redis (Cache)
# =====================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache TTL (秒)
CACHE_TTL_SHORT=300       # 5分
CACHE_TTL_MEDIUM=1800     # 30分
CACHE_TTL_LONG=3600       # 1時間

# =====================================================
# Auth0 (認証)
# =====================================================
# Auth0の設定: https://manage.auth0.com/
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://your-api-identifier
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret

# =====================================================
# Claude API (Anthropic)
# =====================================================
# https://console.anthropic.com/
CLAUDE_API_KEY=sk-ant-api03-xxxxx
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7

# Rate Limiting
CLAUDE_REQUESTS_PER_MINUTE=10

# =====================================================
# OpenAI API (Embedding生成)
# =====================================================
# https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxx
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIMENSIONS=1536

# =====================================================
# AWS S3 (コードストレージ - オプション)
# =====================================================
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=reviewapp-code

# =====================================================
# CORS Settings
# =====================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# =====================================================
# Rate Limiting
# =====================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=1m

# =====================================================
# Feature Flags
# =====================================================
# Phase別の機能切り替え
FEATURE_VECTOR_SEARCH=false        # Phase 2
FEATURE_HYBRID_SEARCH=false        # Phase 3
FEATURE_AUTO_KNOWLEDGE_EXTRACT=true
FEATURE_CONVERSATION_MODE=true

# =====================================================
# Monitoring (将来的に)
# =====================================================
# SENTRY_DSN=
# DATADOG_API_KEY=

# =====================================================
# Development Tools
# =====================================================
# Air (ホットリロード)
AIR_ENABLED=true

# デバッグモード
DEBUG=false